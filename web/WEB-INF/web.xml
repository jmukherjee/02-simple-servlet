<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>02-simple-servlet</display-name>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>ServletA</servlet-name>
        <servlet-class>com.adsk.servlet.ServletA</servlet-class>

        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletA</servlet-name>
        <url-pattern>/servlet-a</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletB</servlet-name>
        <servlet-class>com.adsk.servlet.ServletB</servlet-class>

        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletB</servlet-name>
        <url-pattern>/servlet-b</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletC</servlet-name>
        <servlet-class>com.adsk.servlet.ServletC</servlet-class>

        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletC</servlet-name>
        <url-pattern>/servlet-c</url-pattern>
    </servlet-mapping>
</web-app>